@model WebFashion.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="modal" style="position: relative;display: block;z-index: 0;overflow-y: hidden;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa Product</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <i class="anticon anticon-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc xóa Product này?</p>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="modal-footer">
                    <a href="/Product/Index" class="btn btn-default m-r-10">Hủy</a>
                    <button type="submit" value="Xóa" class="btn btn-danger"> Xóa </button>
                </div>
            }
        </div>
    </div>
</div>
