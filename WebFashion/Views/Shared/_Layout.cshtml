    <link rel="stylesheet" href="~/Content/Home/css/style.css">
    <link href="~/Content/Home/~/Content/Home/css/style.css" rel="stylesheet" />
</head>

<body>
    <!--================ Start Header Menu Area =================-->
    <header class="header_area">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <a class="navbar-brand logo_h" href="~/Content/Home/index.html"><img src="~/Content/Home/img/logo.png" alt=""></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @if (Session["ID"] != null)
                    {
                        <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                            <ul class="nav navbar-nav menu_nav ml-auto mr-auto">
                                <li class="nav-item"><a class="nav-link" href="~/Home/Index">Home</a></li>
                                <li class="nav-item"><a class="nav-link" href="~/Home/Shop">Shop</a></li>
                                <li class="nav-item"><a class="nav-link" href="~/Content/Home/index.html">About</a></li>
                                <li class="nav-item submenu dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                       aria-expanded="false"><i class="ti-menu"></i></a>
                                    <ul class="dropdown-menu">
                                        <li class="nav-item"><a class="nav-link" href="/Order/Index">Lịch sử đơn hàng</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("LogOutUser", "Login")">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <ul class="nav-shop">
                                <li class="nav-item">
                                    @using (Html.BeginForm("SearchResult", "Home", FormMethod.Get))
                                    {
                                        <input type="text" placeholder="Tìm kiếm sản phẩm" name="SearchString" style="width: 250px; height: 35px; margin-top: 6px" />
                                        <button type="submit"><i class="ti-search"></i></button>
                                    }

                                </li>
                                <li class="nav-item"><a href="/ShoppingCart/ShowCart"><i class="ti-shopping-cart"></i>@Html.Action("BagCart", "ShoppingCart")</a> </li>
                                <li class="nav-item"><a class="button button-header">@Session["NameUser"]</a></li>

                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                            <ul class="nav navbar-nav menu_nav ml-auto mr-auto">
                                <li class="nav-item"><a class="nav-link" href="~/Home/Index">Home</a></li>
                                <li class="nav-item"><a class="nav-link" href="~/Home/Shop">Shop</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>
                            </ul>
                            <ul class="nav-shop">
                                <li class="nav-item">
                                    @using (Html.BeginForm("SearchResult", "Home", FormMethod.Get))
                                    {
                                        <input type="text" placeholder="Tìm kiếm sản phẩm" name="SearchString" style="width: 250px; height: 35px; margin-top: 6px" />
                                        <button type="submit"><i class="ti-search"></i></button>
                                    }

                                </li>
                                <li class="nav-item"><a href="/ShoppingCart/ShowCart"><i class="ti-shopping-cart"></i>@Html.Action("BagCart", "ShoppingCart")</a> </li>
                                <li class="nav-item"><a href="~/Login/LoginUser" class="button button-header">Login</a></li>

                            </ul>
                        </div>

                    }
                </div>
            </nav>
        </div>
    </header>
    <!--================ End Header Menu Area =================-->

    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="footer-area footer-only">
            <div class="container">
                <div class="row section_gap">
                    <div class="col-lg-3 col-md-6 col-sm-6">
