    <script src="~/Content/Home/vendors/skrollr.min.js"></script>
    <script src="~/Content/Home/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/Content/Home/vendors/nice-select/jquery.nice-select.min.js"></script>
    <script src="~/Content/Home/vendors/jquery.ajaxchimp.min.js"></script>
    <script src="~/Content/Home/vendors/mail-script.js"></script>
    <script src="~/Content/Home/js/main.js"></script>
</body>
</html>
