@model WebFashion.Models.Cart

@{
    ViewBag.Title = "ShowCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-xl-12 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Product</th>
                                <th class="column-2"></th>
                                <th class="column-3">Price</th>
                                <th class="column-4">Quantity</th>
                                <th class="column-5">Total</th>
                                <th class="column-1"> </th>
                            </tr>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    decimal total = item._quantity * (decimal)item._product.Price.Value;
                                <tr class="table_row">
                                    <td class="column-1">
                                        <div class="how-itemcart1">
                                            <img src="~/Content/Images/@item._product.ImagePro" alt="IMG">
                                        </div>
                                    </td>
                                    <td class="column-2">@Html.DisplayFor(model => item._product.NamePro)</td>
                                    <td class="column-3">@string.Format("{0:#,##0} VND", item._product.Price)</td>
                                    <td>
                                        @using (Html.BeginForm("Update_Cart_Quantity", "ShoppingCart"))
                                        {
                                            <input type="hidden" value="@item._product.ProductID" name="idPro" />
                                            <input type="number" min="1" value="@item._quantity" name="carQuantity" style="text-align:right" />
                                            <input type="submit" value="Cập nhật" />
                                            <i class="fa-solid fa-arrows-rotate"></i>
                                        }
                                    </td>
                                    <td class="column-5">@total.ToString("#,##0").Replace(',', '.') VND</td>
                                    <td>
                                        <a href="~/ShoppingCart/RemoveCart/@item._product.ProductID" class="btn btn-icon btn-outline-danger">
                                            <span class="fa fa-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-lg-12 col-xl-12 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Cart Totals
                    </h4>
                    @using (Html.BeginForm("CheckOut", "ShoppingCart"))
                    {
                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Shipping:
                                </span>
                            </div>
                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    There are no shipping methods available. Please double check your address, or contact us if you need any help.
                                </p>

                                <div class="p-t-15">
                                    <div class="bor8 bg0 m-b-12">
                                        <input required class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="NameCustomer" placeholder="Tên khách hàng">
                                    </div>
                                    <div class="bor8 bg0 m-b-12">
                                        <input required class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="PhoneCustomer" placeholder="Số điện thoại">
                                    </div>
                                    <div class="bor8 bg0 m-b-12">
                                        <input required class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="AddressDeliverry" placeholder="Địa chỉ">
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between w-100">
                                        <h5 style="margin-bottom:15px; padding-bottom:0">Phương thức thanh toán:</h5>
                                        <select class="form-control" name="payment">
                                            <option value="paypal">Thanh toán với Paypal</option>
                                            @*<option value="submit">Tien Mạt</option>*@
                                            <option value="momo">Thanh toán với Momo</option>
                                        </select>
                                    </div>
                                </div>
                                
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
                                <span class="mtext-101 cl2">
                                    Total:
                                </span>
                            </div>

                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2">
                                    @Model.Total_money().ToString("#,##0").Replace(',', '.') VND
                                </span>
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-209 p-t-1">
                                <button type="submit" value="Đặt hàng" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                    Đặt hàng
                                </button>
                            </div>
                            <div class="size-208">
                                <a href="@Url.Action("Index", "Home")" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                    Tiếp tục mua hàng
                                </a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


