@model WebFashion.Models.Cart

@{
    ViewBag.Title = "Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="category">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <h1>Product Checkout</h1>
                <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Checkout</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
<!--================Checkout Area =================-->
<section class="checkout_area section-margin--small">
    <div class="container">
        <div class="billing_details">
            @using (Html.BeginForm("CheckOut", "ShoppingCart"))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <h3>Billing Details</h3>
                        <div class="row contact_form" action="#" method="post" novalidate="novalidate">
                            <div class="col-md-6 form-group p_star">
                                <label class="font-weight-semibold" for="inputState">Tên khách hàng</label>
                                <input type="text" class="form-control" name="NameCustomer" placeholder="Tên khách hàng" required> 
                                
                            </div>
                            <div class="col-md-6 form-group p_star">
                                <label class="font-weight-semibold" for="inputState">Số điện thoại</label>
                                <input type="text" class="form-control" name="PhoneCustomer" placeholder="Số điện thoại" required>
                                
                            </div>
                            <div class="col-md-12 form-group">
                                <label class="font-weight-semibold" for="inputState">Địa chỉ nhận hàng</label>
                                <input type="text" class="form-control" name="AddressDeliverry" placeholder="Địa chỉ nhận hàng" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="order_box">
                            <h2>Your Order</h2>
                            <ul class="list">
                                <li><a href="#"><h4>Product <span>Total</span></h4></a></li>
                                @foreach (var item in Model.Items)
                                {
                                    decimal total = item._quantity * (decimal)item._product.Price.Value;
                                    <li><a href="#">@item._product.NamePro <span class="middle">x @item._quantity</span> <span class="last">@total.ToString("#,##0").Replace(',', '.') VND</span></a></li>


                                }
                            </ul>
                            <ul class="list list_2">
                                <li><a href="#">Total <span>@Model.Total_money().ToString("#,##0").Replace(',', '.') VND</span></a></li>
                            </ul>
                            <div class="payment_item">
                                <div>
                                    <label>Thanh toán khi nhận hàng</label>
                                </div>
                            </div>
                            @if (Session["ID"] != null)
                            {
                                <div class="text-center">
                                    <input type="submit" value="Đặt hàng" class="button button-paypal" />
                                </div>
                            }
                            else
                            {
                                <div class="text-center">
                                    <h4>Vui lòng đăng nhập để đặt hàng</h4>
                                </div>
                                <div class="text-center">
                                    <a href="~/Login/LoginUser">
                                        <h5>Đăng nhập</h5>
                                    </a>
                                </div>
                                    }

                                </div>
                            </div>

                </div>

            }
        </div>
    </div>
</section>
<!--================End Checkout Area =================-->
