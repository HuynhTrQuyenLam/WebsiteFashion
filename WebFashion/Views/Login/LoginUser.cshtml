@model WebFashion.Models.Customer

@{
    ViewBag.Title = "LoginUser";
    Layout = null;
}
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Sign In</title>
    <link href="~/Content/assets/css/app.min.css" rel="stylesheet" />
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/assets/images/logo/favicon.png">

    <!-- page css -->
    <!-- Core css -->
    <link href="~/Content/assets/css/app.min.css" rel="stylesheet">

</head>

<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('/Content/assets/images/others/login-3.png') ">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between m-b-30">
                                        <h2 class="m-b-0">Sign In</h2>
                                    </div>
                                    @using (Html.BeginForm("LoginAccount", "Login"))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div>
                                            <div class="form-group">
                                                <label class="font-weight-semibold" for="userName">Username:</label>
                                                <div class="input-affix">
                                                    <i class="prefix-icon anticon anticon-user"></i>
                                                    <input @Html.TextBoxFor(model => model.AccountCus, new { @class = "form-control", id = "userName", placeholder = "Username", type = "text", style = "field-validation-error" })
                                                    <div>@Html.ValidationMessageFor(model => model.AccountCus)</div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="font-weight-semibold" for="password">Password:</label>

                                                <div class="input-affix m-b-10">
                                                    <i class="prefix-icon anticon anticon-lock"></i>
                                                    <input @Html.PasswordFor(model => model.PassCus, new { @class = "form-control", type = "password", placeholder = "Password" })
                                                    <div>@Html.ValidationMessageFor(model => model.PassCus)</div>
                                                </div>
                                                @if (ViewBag.ErrorInfo != null)
                                                {
                                                    <p style="color:red;font-weight:bold;">@ViewBag.ErrorInfo</p>
                                                }
                                            </div>
                                            <div class="form-group">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <button class="btn btn-primary" type="submit" value="Login">Sign In</button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @using (Html.BeginForm("RegisterUser", "Login"))
                                    {
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <span class="font-size-13 text-muted">
                                                    Don't have an account?
                                                    <a class="small" href="~/Login/RegisterUser">Signup</a>
                                                </span>
                                            </div>
                                        </div>
                                    }
                                    <div class="form-group">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <a href="~/Login/LoginAdmin" class="font-size-13 text-muted">
                                                Đăng nhập dưới quyền admin
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-none d-md-flex p-h-40 justify-content-between">
                    <span class="">© 2019 ThemeNate</span>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a class="text-dark text-link" href="~/Content/">Legal</a>
                        </li>
                        <li class="list-inline-item">
                            <a class="text-dark text-link" href="~/Content/">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <!-- Core Vendors JS -->
    <script src="~/Content/assets/js/vendors.min.js"></script>

    <!-- page js -->
    <!-- Core JS -->
    <script src="~/Content/assets/js/app.min.js"></script>

</body>

</html>
