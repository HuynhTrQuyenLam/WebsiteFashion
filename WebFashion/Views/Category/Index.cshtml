@model IEnumerable<WebFashion.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Products</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/Category/Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Category</a>
            <span class="breadcrumb-item active">Danh sách Category</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" style="min-width: 180px;">
                            <option selected>Catergory</option>
                            <option value="all">All</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a href="/Category/Create" class="btn btn-primary">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Tạo mới</span>
                </a>
            </div>
        </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên Category</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    #@Html.DisplayFor(modelItem => item.IDCate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameCate)
                                </td>

                                <td class="text-right">
                                    <a href="@Url.Action("Detail", new { id = item.IDCate })" class="btn btn-icon btn-hover btn-sm btn-rounded">
                                        <i class="anticon anticon-info"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = item.IDCate })" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                        <i class="anticon anticon-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.IDCate })" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                        <i class="anticon anticon-delete"></i>
                                    </a>
</tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>
