@model IEnumerable<WebFashion.Models.OrderPro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Orders List</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Phone Number</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            #@item.ID
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <h6 class="m-b-0">@item.NameCus</h6>
                            </div>
                        </td>
                        <td>@item.DateOrder</td>
                        <td>@item.PhoneCus</td>
                        @{
                            if (@item.Status == 0)
                            {
                                <td><a href="/OrderProducts/Accept/@item.ID" type="button" class="btn btn-warning">Xác nhận</a></td>
                            }
                            else if (@item.Status == 1)
                            {
                                <td><button type="button" class="btn btn-primary">Đã xác nhận</button></td>
                            }
                            else if (@item.Status == 2)
                            {
                                <td><button type="button" class="btn btn-danger">Đã hủy</button></td>
                            }

                        }
                        <td class="text">
                            <a href="/OrderProducts/Detail/@item.ID" class="btn btn-icon btn-hover btn-sm btn-rounded">
                                <i class="anticon anticon-info"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
