@model IEnumerable<WebFashion.Models.OrderPro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Orders List</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                #@Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <h6 class="m-b-0">@Html.DisplayFor(modelItem => item.NameCus)</h6>
                                </div>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.DateOrder)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneCus)</td>
                            <td class="text">
                                <a href="@Url.Action("Detail", new { id = item.ID })" class="btn btn-icon btn-hover btn-sm btn-rounded">
                                    <i class="anticon anticon-info"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
